{
  "name": "@wexond/rpc",
  "version": "1.0.0",
  "description": "Type-safe inter-process communication",
  "private": true,
  "homepage": "https://github.com/wexond/rpc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wexond/rpc.git"
  },
  "scripts": {
    "watch": "lerna run --stream --parallel watch",
    "build:prod": "npm run clean && lerna run --stream --parallel build:prod",
    "prepublishOnly": "npm run build:prod",
    "clean": "rimraf packages/**/build",
    "postinstall": "lerna link --force-local"
  },
  "devDependencies": {
    "@types/node": "14.14.6",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lerna": "^3.22.1",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "4.0.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
