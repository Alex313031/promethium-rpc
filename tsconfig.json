{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "module": "None",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "lib/*": ["./src/lib/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./stories/**/*.tsx",
    "./stories/**/*.ts"
  ]
}
