{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "preserveWatchOutput": true,

    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",

    "outDir": "./build",

    "baseUrl": "packages"
  }
}
