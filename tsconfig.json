{
  "compilerOptions": {
    "outDir": "./build",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,

    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,

    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],

    "baseUrl": "./"
  },
  "include": ["./src"]
}
